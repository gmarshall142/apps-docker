FROM nginx

RUN rm /etc/nginx/conf.d/default.conf

COPY nginx-https.conf /etc/nginx/conf.d/default.conf

COPY ./certs/appfactory.crt /etc/ssl/certs/appfactory.crt
COPY ./certs/dhparam.pem /etc/ssl/certs/dhparam.pem
COPY ./certs/appfactory.key /etc/ssl/private/appfactory.key

RUN   chmod 700 /etc/ssl/private
